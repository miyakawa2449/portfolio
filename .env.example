# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=production
FLASK_APP=app.py

# Database Configuration
# Docker環境用（本番）
DATABASE_URL=mysql+pymysql://root:your-mysql-password@mysql:3306/portfolio_db?charset=utf8mb4
MYSQL_ROOT_PASSWORD=your-mysql-password

# ローカル開発用（Docker不使用時）
# DATABASE_URL=mysql+pymysql://root:sa19qiZ-dq9iZ6p-@localhost:3306/portfolio_db?charset=utf8mb4

# Google Analytics (optional)
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Security
SESSION_COOKIE_SECURE=True  # HTTPSでは必須
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# URL Configuration
ADMIN_URL_PREFIX=management-panel-2024
LOGIN_URL_PATH=auth-signin-2fa

# Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=static/uploads

# Mail Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password